/**index.wxss**/

swiper {
  height: 420rpx;
}

.swiper-container {
  position: relative;
}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 21rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  margin: 0 10rpx;
  transition: all 0.3s;
  background-color: #cacacb;
}

.swiper-container .dots .dot.active {
  width: 48rpx;
  border-radius: 14rpx;
  background: #fff;
}

.ticket-contaier {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 710rpx;
  height: 168rpx;
  background-color: #818181;
  margin: 22rpx auto 35rpx;
  border-radius: 10px;
}

.ticket-contaier .logo {
  width: 130rpx;
  height: 130rpx;
}

.ticket-contaier .content {
  width: 498rpx;
  padding-left: 12rpx;
}

.ticket-contaier .content .top {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.ticket-contaier .content .top > text {
  font-size: 32rpx;
}

.ticket-contaier .content .top > button {
  width: 168rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  color: #fff;
  border-radius: 30rpx;
  font-size: 24rpx;
  background-color: #2bc6b6;
}

.ticket-contaier .content .ticket-time {
  font-size: 24rpx;
  letter-spacing: 5rpx;
}

.activity-container {
  width: 710rpx;
  height: 269rpx;
  margin: 0 auto 30rpx;
}

.activity-container .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 30rpx;
  margin-bottom: 12rpx;
}

.activity-container .header .title {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 30rpx;
  line-height: 30rpx;
}

.activity-container .header .title .icon {
  width: 26rpx;
  height: 30rpx;
}

.activity-container .header .title > text {
  color: #818181;
  font-size: 24rpx;
  padding-left: 16rpx;
}
.activity-container .header .more {
  width: 16rpx;
  height: 27rpx;
}